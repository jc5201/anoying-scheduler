<Window x:Class="scheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:scheduler"
        mc:Ignorable="d"
        Title="AnnoyingScheduler" Height="450" Width="800">
    <Grid>
        <Button Content="Setting" HorizontalAlignment="Left" Margin="22,37,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <ListBox x:Name="taskBox" HorizontalAlignment="Left" Height="302" Margin="381,82,0,0" VerticalAlignment="Top" Width="367" Padding="20" FontSize="20"/>
        <Viewbox HorizontalAlignment="Left" Height="305" Margin="22,82,0,0" VerticalAlignment="Top" Width="332">
            <Calendar x:Name="calendar" HorizontalAlignment="Left" VerticalAlignment="Top" AutomationProperties.Name="calendar" Initialized="Calendar_Initialized" SelectionMode="MultipleRange" SelectedDatesChanged="Calendar_SelectedDatesChanged"/>
        </Viewbox>

    </Grid>
</Window>
